# ---------------------------------------------------------
# COMPILER CONFIG
# ---------------------------------------------------------
CC = gcc
CFLAGS = -Wall -Wextra -Werror -pedantic -std=c2x -O3 \
	 -Isrc
LDFLAGS =

# ---------------------------------------------------------
# DIRECTORIES
# ---------------------------------------------------------
SRC_DIR      = src
BUILD_DIR    = build

# ---------------------------------------------------------
# SOURCES
# ---------------------------------------------------------

# App source files
SOURCES = $(wildcard $(SRC_DIR)/*.c)
OBJECTS = $(patsubst $(SRC_DIR)/%.c,$(BUILD_DIR)/%.o,$(SOURCES))

# Remove main.o for linking tests
APP_OBJECTS_NO_MAIN = $(filter-out $(BUILD_DIR)/main.o,$(OBJECTS))

# ---------------------------------------------------------
# EXECUTABLES
# ---------------------------------------------------------
EXECUTABLE = $(BUILD_DIR)/main.exe

# ---------------------------------------------------------
# DEFAULT
# ---------------------------------------------------------
all: $(EXECUTABLE)

# ---------------------------------------------------------
# BUILD MAIN APP
# ---------------------------------------------------------
$(EXECUTABLE): $(OBJECTS) | $(BUILD_DIR)
	$(CC) $(CFLAGS) $^ -o $@ $(LDFLAGS)

# ---------------------------------------------------------
# OBJECT RULES
# ---------------------------------------------------------

# App objects
$(BUILD_DIR)/%.o: $(SRC_DIR)/%.c | $(BUILD_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

# ---------------------------------------------------------
# DIRECTORY CREATION
# ---------------------------------------------------------
$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

# ---------------------------------------------------------
# COMMAND TARGETS
# ---------------------------------------------------------

run: $(EXECUTABLE)
	./$(EXECUTABLE)

clean:
	rm -rf $(BUILD_DIR)

.PHONY: all run clean
